<!-- <%= stylesheet_link_tag "print" %> -->
<style type="text/css">

    table {
        border: 0;
        border-collapse: collapse;
        border-style: solid;
        width: 14.5cm;
        height: 24cm;
        /*padding: 2px auto auto 2px;*/
    }
    td {
        /*border: 1px;*/
        border-style: solid;
        padding-top: 0.5cm;
        padding-left: 0.5cm;
        font-family: "STFangsong","FangSong";
        font-size: 0.5cm;
        margin: 0;

    }
    th {
        height: 2cm;
        font-size: 0.6cm;
        font-family: "黑体";
        text-align: center;
    }
    .noborder {
        border: 0;
        padding: 0;
    }
    .gao1 {
        height: 0.5cm;
    }
    .right {
        text-align: right;
    }
    /*.left
{
	text-align: left;
}*/
    .gao2 {
        height: 1.2cm;
        width: 6.3cm;
    }
    .gao3 {
        height: 1.8cm;
    }
    .gao4 {
        height: 3.2cm;
    }
    .top {
        vertical-align: top;
    }
    .lwdw {
        vertical-align: top;
        width: 8.2cm;

        /*text-align: left;*/
    }
    .wz {

        margin-left: 1cm;
    }
    @media print {
        .diss {
            display: none;
        }
    }
    @media screen {
        .sdiss {
            display: none;
        }
    }

</style>
<div class="tab-div sdiss" align="center">
    <table>
        <tr>
            <th colspan="2">扬州市直管公房管理处办公室收文单
            </th>
        </tr>
        <tr>
            <td colspan="2" class="noborder gao1 right">
                <% if @rec_doc.doc_type == 0 %>
                收文编号:收文(<%= @rec_doc.year %>)年<%= @rec_doc.year_num %>号
            <% else %>
                收文编号:信访(<%= @rec_doc.year %>)年<%= @rec_doc.year_num %>号
                <% end %>
            </td>
        </tr>

        <tr>
            <td rowspan="2" class="lwdw">
                来文单位:<br>
                <%= @rec_doc.from %></td>
            <td class="left gao2 top">
                收文日期:
                <%= @rec_doc.riqi %></td>
        </tr>

        <tr>
            <td class="gao3 top left">
                文件编号:
                <br>
                <%= @rec_doc.from_code %></td>
        </tr>
        <tr>
            <td class="gao4 top left" colspan="2">
                文件内容:<br><br>
                <span class="wz">
                    <%= @rec_doc.wjnr %></span>
            </td>
        </tr>
        <tr>
            <td class="gao4 top left" colspan="2">
                拟办意见:</td>
        </tr>
        <tr>
            <td class="gao4 top left" colspan="2">
                领导批示和会办意见：</td>
        </tr>
    </table>
</form>
</div>
</body>
