<!DOCTYPE html>
<html>
    <head>
        <title>190号大院</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <% if logged_in? %>
        <%= render 'layouts/header' %>
        <% end %>

        <div class="container">
          <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "col-xs-6 col-xs-offset-3 alert alert-#{key}") %>
          <% end %>
            <%= yield %>
        </div>

    </body>
    <%= yield :print %>
</html>
